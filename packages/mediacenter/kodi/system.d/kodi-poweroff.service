[Unit]
Description=Kodi poweroff script
After=kodi.service
Before=systemd-poweroff.service
DefaultDependencies=no

[Service]
Type=oneshot
Environment=HOME=/clue
ExecStart=-/bin/sh -c ". /etc/profile; exec /bin/sh /clue/.config/shutdown.sh poweroff"
RemainAfterExit=yes

[Install]
WantedBy=poweroff.target
