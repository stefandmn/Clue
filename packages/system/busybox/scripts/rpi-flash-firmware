#!/bin/sh

FLAG_FILE="/clue/.rpi_flash_firmware"

. /usr/lib/clue/functions

hidecursor

if [ -f "${FLAG_FILE}" ]; then
	. ${FLAG_FILE}
	rm -f "${FLAG_FILE}"

	if ! mount -o remount,rw /flash 2>/dev/null; then
		echo "ERROR: Unable to mount /flash as a read/write file system."
		echo
		echo "Aborting Flash update process - please proceed with a manual update."
		echo

		StartProgress countdown "Rebooting in 5s... " 5 "NOW"
		reboot -f &>/dev/null
	fi

	sync
	mount -o remount,ro /flash
fi

reboot -f &>/dev/null
