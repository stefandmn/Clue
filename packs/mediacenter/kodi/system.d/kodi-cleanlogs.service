[Unit]
Description=Kodi clean debug logs
ConditionKernelCommandLine=!debugging
ConditionPathExists=!/clue/.cache/debug.libreelec
Before=kodi.service

[Service]
Type=oneshot
ExecStart=-/bin/sh -c 'rm -rf /clue/.kodi/userdata/addon_data/*/*.log /clue/.kodi/userdata/addon_data/*/log/*'
RemainAfterExit=yes

[Install]
WantedBy=kodi.service
