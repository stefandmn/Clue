[Unit]
Description=Touchscreen support daemon
After=graphical.target
Before=kodi.target

[Service]
Type=oneshot
Environment=HOME=/clue
ExecStartPre=-/bin/sh -c "exec /bin/sh /clue/.kodi/addons/service.touchscreen/bin/ts_calibrate.sh service"
ExecStart=-/bin/sh -c    "exec /bin/sh /clue/.kodi/addons/service.touchscreen/bin/ts_uinput_touch.sh service"
RemainAfterExit=yes

[Install]
WantedBy=kodi.target
