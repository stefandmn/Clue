#!/bin/sh

. /etc/profile

oe_setup_addon driver.dvb.hdhomerun

if [ "$SUSPEND_DRIVER" = "true" ]; then
  case "$1" in
    pre)
      killall -9 userhdhomerun &>/dev/null
      rmmod dvb_hdhomerun_fe &>/dev/null
      rmmod dvb_hdhomerun &>/dev/null
      rmmod dvb_hdhomerun_core &>/dev/null
      ;;
    post)
      ;;
  esac
fi
